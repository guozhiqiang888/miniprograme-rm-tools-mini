page{
  width: 100%;
  height: 100%;
}
.swiper-waper{
  width: 100%;
  height: 100%;
}
.item-waper{
  width: 100%;
  height: 100%;
  position: relative;
  padding-top: 60px;
}
.skip-style{
  top: 20px;
  right: 20px;
  position: absolute;
}
.img-waper{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.slide-image{
  width: 310px;
  height: 310px;
}
.content-waper{
  width: 90%;
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0px 20px;
  text-align: center;
  position: relative;
  line-height: 30px;
}
.title-font{
  font-size: 24px;
}
.title-font2{
  font-size: 18px;
  padding: 0px 25px;
}
.btn{
  width: 100%;
  height: 45px;
  color: white;
  border-radius: 0px 0px;
  margin-bottom: 0px;
  background-color: #CA2A23;
}
.btn-waper{
  width: 90%;
  height: 27%;
  padding: 0px 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}